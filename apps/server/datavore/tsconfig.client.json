{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/app/client/**/*.client.ts", "src/app/shared/**/*.shared.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
